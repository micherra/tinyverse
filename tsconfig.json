{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": false,
    "paths": {
      "@tinyverse/cli/*": [
        "packages/cli/src/*"
      ],
      "@tinyverse/core/*": [
        "packages/core/src/*"
      ],
      "@tinyverse/extractor/*": [
        "packages/extractor/src/*"
      ],
      "@tinyverse/builder/*": [
        "packages/builder/src/*"
      ],
      "@tinyverse/dev-server/*": [
        "packages/dev-server/src/*"
      ],
      "@tinyverse/verifier/*": [
        "packages/verifier/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "apps/**/*",
    "examples/**/*",
    "tools/**/*",
    "server/**/*",
    "templates/**/*",
    "scripts/**/*"
  ]
}
