# Core defaults for Tinyverse CLI and dev server
TINYVERSE_SERVER_HOST=127.0.0.1
TINYVERSE_SERVER_PORT=8787
TINYVERSE_OUT_DIR=.tinyverse
TINYVERSE_DIST_DIR=dist
TINYVERSE_OPEN_BROWSER=false
TINYVERSE_LOG_LEVEL=info

# CLI flags as env overrides
TINYVERSE_STRICT=false
TINYVERSE_JSON=false
TINYVERSE_VERBOSE=false

# Optional verifier settings
TINYVERSE_VERIFY_HEADLESS=false

# OPENAI API KEY (for Preview App features)
OPENAI_API_KEY=your_openai_api_key_here